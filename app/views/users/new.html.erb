<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <h1 class="login-title">創建帳戶</h1>
      <p class="login-subtitle">加入我們的社群，開始分享您的想法</p>
    </div>
    
    <%= form_with model: @user, local: true, class: "login-form" do |f| %>
      <div class="form-group">
        <div class="input-wrapper">
          <i class="input-icon fas fa-user"></i>
          <%= f.text_field :username, class: "form-input", placeholder: "使用者名稱", required: true %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="input-wrapper">
          <i class="input-icon fas fa-lock"></i>
          <%= f.password_field :password, class: "form-input", placeholder: "密碼", required: true %>
        </div>
      </div>
      
      <div class="form-actions">
        <%= f.submit "註冊", class: "login-btn" %>
      </div>
    <% end %>
    
    <div class="login-footer">
      <p class="register-link">
        已經有帳戶？ 
        <%= link_to "立即登入", login_path, class: "register-btn" %>
      </p>
    </div>
  </div>
</div>
